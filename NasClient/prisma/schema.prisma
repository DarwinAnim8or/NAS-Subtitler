generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            Int          @id @default(autoincrement())
  email         String?      @unique
  password_hash String?
  created_at    DateTime     @default(now())
  state         String       @default("active")
  tasks         Task[]
  points        UserPoint[]

  @@map("users")
}

model Task {
  id          Int          @id @default(autoincrement())
  video_name  String
  video_path  String
  audio_path  String
  duration_ms Int?
  ffmpeg_log  String?
  created_at  DateTime     @default(now())
  user_id     Int?
  user        User?        @relation(fields: [user_id], references: [id], onDelete: SetNull)
  userPoints  UserPoint[]

  @@index([user_id])
  @@map("task")
}

model UserPoint {
  id         Int      @id @default(autoincrement())
  user_id    Int
  points     Int
  reason     String?
  created_at DateTime @default(now())
  task_id    Int?

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)
  task Task? @relation(fields: [task_id], references: [id], onDelete: SetNull)

  @@index([user_id])
  @@index([task_id])
  @@map("userpoint")
}

model Settings {
  id                 Int      @id @default(autoincrement())
  key                String   @unique @default("singleton")
  svc                String   @default("openai")
  openaiKey          String?
  auto               Boolean  @default(false)
  autoGenerate       Boolean  @default(false)
  autoTranslate      Boolean  @default(false)
  skipIfHasSubtitle  Boolean  @default(false)
  srcLang            String?
  tgtLang            String?
  model              String?
  profile            String?
  prompt             String?
  polish             Boolean  @default(false)
  // 新增：保存视频和字幕扩展名（JSON 字符串）
  videoExts          String?
  subExts            String?
  // 新增：运行时选择的“挂载根目录”相对路径（相对于 MOUNT_DIR），为空表示使用 MOUNT_DIR 本身
  baseRel            String?
  created_at         DateTime @default(now())
  updated_at         DateTime @updatedAt

  @@map("settings")
}

model MediaFile {
  id         Int      @id @default(autoincrement())
  dirRel     String
  name       String
  sequence   Int      @default(0)
  size       Int?
  mtime      DateTime?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@unique([dirRel, name])
  @@map("mediafile")
}